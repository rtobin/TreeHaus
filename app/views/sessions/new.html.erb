<h1>Sign in</h1>

<%= render "shared/errors" %>

<form action="<%= session_url %>" method="POST">
  <%= auth_token %>

  <label>
    Name:
    <input type="text" name="user[name]">
  </label>

  <br>

  <label >
    Password:
    <input type="password" name="user[password]">
  </label>
  <br>

  <input type="submit">
</form>
