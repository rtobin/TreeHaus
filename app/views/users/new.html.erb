<h1>Sign up!</h1>

<ul>
  <% @user.errors.full_messages.each do |err_msg| %>
    <li><%= err_msg %></li>
  <% end %>
</ul>

<%= render "shared/errors" %>

<form action="/users" method="POST">
  <%= auth_token %>

  <label>
    Email:
    <input
      type="text"
      name="user[email]"
      value="<%= @user.email %>">
  </label>

  <label>
    Password:
    <input
      type="text"
      name="user[password]"
      value="<%= @user.password %>">
  </label>

  <label>
    Name:
    <input
      type="text"
      name="user[name]"
      value="<%= @user.name %>">
  </label>

  <label>
    Title:
    <input
      type="text"
      name="user[title]"
      value="<%= @user.title %>">
  </label>

  <label>
    Organization/Company:
    <input
      type="text"
      name="user[organization_name]"
      value="<%= @user.organization_name %>">
  </label>


  <input type="submit" value="Create New Account!">
</form>
