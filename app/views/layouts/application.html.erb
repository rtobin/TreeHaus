<!DOCTYPE html>
<html>
<head>
  <title>Treehaus</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if logged_in? %>
    <p>Logged in as: <%= current_user.email %></p>
    <%= button_to "Sign Out", session_url, method: :delete %>
  <% end %>

  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>

  <%= yield %>

</body>
</html>
